@using Microsoft.AspNetCore.Identity
@using CMSBlog.Core.Domain.Identity
@using CMSBlog.WebApp.Extensions
@inject IOptions<SystemConfig> _config;
@model List<NavigationItemViewModel>
@inject SignInManager<AppUser> SignInManager
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">@_config.Value.AppName</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConsts.Home">Home</a></li>
                @foreach (var item in Model)
                {
                    if (item.HasChildren)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @item.Name
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var child in item.Children)
                                {
                                     <li>
                                         <a class="dropdown-item" title="@child.Name" href="@child.Url" target="@(child.OpenInNewTab ? "_blank" : "_self")">@child.Name</a>
                                     </li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link px-lg-3 py-3 py-lg-4" href="@item.Url" target="@(item.OpenInNewTab ? "_blank" : "_self")">@item.Name</a>
                        </li>
                    }
                }
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <span class="navbar-text">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="btn" href="@UrlConsts.Profile">@User.GetFirstName()</a>
                    <a class="btn" href="@UrlConsts.CreatePost">Create Posts</a>
                }
                else
                {
                    <a class="btn" href="@UrlConsts.Login">Login</a>
                    <a class="btn" href="@UrlConsts.Register">Register</a>
                }

            </span>
        </div>
    </div>
</nav>